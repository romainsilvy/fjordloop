<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
>
    <testsuites>
        <testsuite name="Unit">
            <directory>tests/Unit</directory>
        </testsuite>
        <testsuite name="Feature">
            <directory>tests/Feature</directory>
        </testsuite>
    </testsuites>
    <source>
        <include>
            <directory>app</directory>
        </include>
    </source>
    <php>
        <env name="APP_ENV" value="testing"/>
        <env name="APP_MAINTENANCE_DRIVER" value="file"/>
        <env name="BCRYPT_ROUNDS" value="4"/>
        <env name="CACHE_STORE" value="array"/>
        <env name="DB_DATABASE" value="testing"/>
        <env name="MAIL_MAILER" value="array"/>
        <env name="PULSE_ENABLED" value="false"/>
        <env name="QUEUE_CONNECTION" value="sync"/>
        <env name="SESSION_DRIVER" value="array"/>
        <env name="TELESCOPE_ENABLED" value="false"/>
        <!-- Media Library Configuration for Testing -->
        <env name="MEDIA_DISK" value="public"/>
        <env name="FILESYSTEM_DISK" value="public"/>
        <!-- Disable queue for conversions in testing -->
        <env name="QUEUE_CONVERSIONS_BY_DEFAULT" value="false"/>
        <env name="QUEUE_CONVERSIONS_AFTER_DB_COMMIT" value="false"/>
        <!-- Mock AWS services for testing -->
        <env name="AWS_ACCESS_KEY_ID" value="testing"/>
        <env name="AWS_SECRET_ACCESS_KEY" value="testing"/>
        <env name="AWS_DEFAULT_REGION" value="us-east-1"/>
        <env name="AWS_BUCKET" value="testing"/>
        <env name="AWS_URL" value="http://localhost:9000"/>
    </php>
</phpunit>
